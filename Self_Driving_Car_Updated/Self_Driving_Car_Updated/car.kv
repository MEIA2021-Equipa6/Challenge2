#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

<Car>:
    size: 20, 10
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix

<Ball1>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,0,0,1
        Ellipse:
            pos: self.pos
            size: self.size
<Ball2>:
    size: 10,10
    canvas:
        Color:
            rgba: 0,1,1,1
        Ellipse:
            pos: self.pos
            size: self.size

<Ball3>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,1,0,1
        Ellipse:
            pos: self.pos
            size: self.size

<Line1>:
    canvas:
        Color:
            rgb: 0.8,0.7,0
        Line:
            points: 50, 150, 200, 150
            width: 5

<Line2>:
    canvas:
        Color:
            rgb: 0.8,0.7,0
        Line:
            points: 450, 450, 600, 550
            width: 5

<Line3>:
    canvas:
        Color:
            rgb: 0.8,0.7,0
        Line:
            points: 100, 250, 150, 350
            width: 5

<Line4>:
    canvas:
        Color:
            rgb: 0.8,0.7,0
        Line:
            points: 450, 150, 600, 250
            width: 5

<Line4>:
    canvas:
        Color:
            rgb: 0.8,0.7,0
        Line:
            points: 200, 450, 300, 450
            width: 5

<Game>:
    car: game_car
    ball1: game_ball1
    ball2: game_ball2
    ball3: game_ball3
    line1: game_line1
    line2: game_line2
    line3: game_line3
    line4: game_line4
    line5: game_line5

    Car:
        id: game_car
        center: self.parent.center
    Ball1:
        id: game_ball1
        center: self.parent.center
    Ball2:
        id: game_ball2
        center: self.parent.center
    Ball3:
        id: game_ball3
        center: self.parent.center
    Line1:
        id: game_line1
    Line2:
        id: game_line2
    Line3:
        id: game_line3
    Line4:
        id: game_line4
    Line5:
        id: game_line5